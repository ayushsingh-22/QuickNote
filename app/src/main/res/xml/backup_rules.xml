<?xml version="1.0" encoding="utf-8"?><!--
   Backup rules for SwiftNote - User data protection compliant
   See https://developer.android.com/guide/topics/data/autobackup
   for details.
   Note: This file is ignored for devices older that API 31
   See https://developer.android.com/about/versions/12/backup-restore
-->
<full-backup-content>
    <!-- Include user preferences and settings -->
    <include domain="sharedpref" path="theme_preferences"/>
    <include domain="sharedpref" path="view_mode_preferences"/>
    <include domain="sharedpref" path="user_settings"/>
    
    <!-- Exclude sensitive data that should not be backed up -->
    <exclude domain="sharedpref" path="device_credentials"/>
    <exclude domain="sharedpref" path="encryption_keys"/>
    <exclude domain="sharedpref" path="auth_tokens"/>
    <exclude domain="sharedpref" path="permission_prefs"/>
    
    <!-- Include app databases (notes are user-generated content) -->
    <include domain="database" path="notes_database"/>
    <include domain="database" path="reminders_database"/>
    
    <!-- Exclude temporary and cache files -->
    <exclude domain="file" path="temp/"/>
    <exclude domain="file" path="cache/"/>
    <exclude domain="file" path="logs/"/>
    
    <!-- Exclude any Firebase or external service cached data -->
    <exclude domain="file" path="firebase/"/>
    <exclude domain="file" path="mlkit/"/>
</full-backup-content>